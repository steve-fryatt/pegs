DEF PROCset_icon_colour(whand%,ihand%,fcol%,bcol%)
LOCAL eor%,clear%
eor%=0
clear%=(255<<24)
!safeblock%=whand%
safeblock%!4=ihand%
safeblock%!8=eor%
safeblock%!12=clear%
SYS "Wimp_SetIconState",,safeblock%
eor%=0
clear%=0
eor%+=(bcol%<<28)
eor%+=(fcol%<<24)
