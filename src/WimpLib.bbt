DEF FNreport(errno%,err$,error%,task$,ok%,cancel%)
LOCAL flag%,response%
!safeblock%=errno%
$(safeblock%+4)=err$+CHR$(0)
flag%=ok%+(cancel%<<1)+(error%<<4)
IF error%=1 task$="Message from "+task$
SYS "Wimp_ReportError",safeblock%,flag%,task$ TO ,response%
=response%
